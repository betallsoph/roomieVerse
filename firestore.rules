rules_version = '2';

service cloud.firestore {
  match /databases/{database}/documents {

    // === LISTINGS ===
    match /listings/{listingId} {
      // Anyone can read active listings
      allow read: if resource.data.status == "active";

      // Authors can read their own listings (any status)
      allow read: if request.auth != null
                  && resource.data.userId == request.auth.uid;

      // Admins can read all
      allow read: if isAdmin();

      // Authenticated users can create
      allow create: if request.auth != null
                    && request.resource.data.userId == request.auth.uid;

      // Authors can update their own listings
      // BUT cannot self-approve (pending/rejected → active)
      allow update: if request.auth != null
                    && resource.data.userId == request.auth.uid
                    && !(resource.data.status in ["pending", "rejected"]
                         && request.resource.data.status == "active");

      // Anyone can increment viewCount
      allow update: if request.resource.data.diff(resource.data).affectedKeys().hasOnly(["viewCount"]);

      // Authenticated users can increment favoriteCount
      allow update: if request.auth != null
                    && request.resource.data.diff(resource.data).affectedKeys().hasOnly(["favoriteCount"]);

      // Admins can update any listing (for moderation)
      allow update: if isAdmin();

      // Only admins can delete
      allow delete: if isAdmin();
    }

    // === USERS ===
    match /users/{userId} {
      // Anyone can read profiles
      allow read: if true;

      // Users can create their own profile (role must be "user" or absent)
      allow create: if request.auth != null
                    && request.auth.uid == userId
                    && (!("role" in request.resource.data) || request.resource.data.role == "user");

      // Users can update their own profile, but CANNOT change role
      // (role can only be changed by Admin SDK via /api/auth/promote)
      allow update: if request.auth != null
                    && request.auth.uid == userId
                    && (
                      // If role exists in current doc, it must stay the same
                      ("role" in resource.data && request.resource.data.role == resource.data.role)
                      // If role doesn't exist yet, allow setting it to "user" or not setting it
                      || (!("role" in resource.data) && (!("role" in request.resource.data) || request.resource.data.role == "user"))
                    );
    }

    // === REPORTS ===
    match /reports/{reportId} {
      allow create: if request.auth != null;
      allow read, update: if isAdmin();
    }

    // === FAVORITES ===
    match /favorites/{favId} {
      allow read: if request.auth != null
                  && resource.data.userId == request.auth.uid;
      allow create: if request.auth != null
                    && request.resource.data.userId == request.auth.uid;
      allow delete: if request.auth != null
                    && resource.data.userId == request.auth.uid;
    }

    // === COMMUNITY POSTS ===
    match /community_posts/{postId} {
      // Anyone can read active posts
      allow read: if resource.data.status == "active";

      // Authors can read their own posts (any status)
      allow read: if request.auth != null
                  && resource.data.authorId == request.auth.uid;

      // Admins can read all
      allow read: if isAdmin();

      // Authenticated users can create
      allow create: if request.auth != null
                    && request.resource.data.authorId == request.auth.uid;

      // Any authenticated user can update likes/views/comments counters only
      allow update: if request.auth != null
                    && request.resource.data.diff(resource.data).affectedKeys().hasOnly(["likes", "views", "comments"]);

      // Authors can update their own posts
      // BUT cannot self-approve (pending/rejected → active)
      allow update: if request.auth != null
                    && resource.data.authorId == request.auth.uid
                    && !(resource.data.status in ["pending", "rejected"]
                         && request.resource.data.status == "active");

      // Admins can update/delete any post
      allow update, delete: if isAdmin();
    }

    // === COMMUNITY COMMENTS ===
    match /community_comments/{commentId} {
      // Anyone can read comments
      allow read: if true;

      // Authenticated users can create
      allow create: if request.auth != null
                    && request.resource.data.authorId == request.auth.uid;

      // Authors can update their own comments
      allow update: if request.auth != null
                    && resource.data.authorId == request.auth.uid;

      // Any authenticated user can update likes only
      allow update: if request.auth != null
                    && request.resource.data.diff(resource.data).affectedKeys().hasOnly(["likes"]);

      // Admins can update/delete any comment
      allow update, delete: if isAdmin();
    }

    // === COMMUNITY LIKES ===
    match /community_likes/{likeId} {
      // Users can read their own likes
      allow read: if request.auth != null
                  && resource.data.userId == request.auth.uid;

      // Users can create/delete their own likes
      allow create: if request.auth != null
                    && request.resource.data.userId == request.auth.uid;
      allow delete: if request.auth != null
                    && resource.data.userId == request.auth.uid;
    }

    function isAdmin() {
      return request.auth != null
             && get(/databases/$(database)/documents/users/$(request.auth.uid)).data.role == "admin";
    }
  }
}
