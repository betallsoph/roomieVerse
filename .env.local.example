# ============================================
# roomieVerse - Environment Variables
# Copy this file to .env.local and fill in values
# ============================================

# === Firebase ===
NEXT_PUBLIC_FIREBASE_API_KEY=
NEXT_PUBLIC_FIREBASE_AUTH_DOMAIN=
NEXT_PUBLIC_FIREBASE_PROJECT_ID=
NEXT_PUBLIC_FIREBASE_STORAGE_BUCKET=
NEXT_PUBLIC_FIREBASE_MESSAGING_SENDER_ID=
NEXT_PUBLIC_FIREBASE_APP_ID=

# === Firebase Toggle ===
# Set to "false" to disable Firebase and use mock data (for UI development)
NEXT_PUBLIC_FIREBASE_ENABLED=true

# === Cloudflare R2 (Image Storage) ===
# Get these from Cloudflare Dashboard > R2 > Manage R2 API Tokens
R2_ACCOUNT_ID=
R2_ACCESS_KEY_ID=
R2_SECRET_ACCESS_KEY=
R2_BUCKET_NAME=roomieverse-images

# Public URL for serving images
# Option 1: R2.dev subdomain (free, auto-generated)
# Option 2: Custom domain via Cloudflare (e.g., https://images.roomieverse.vn)
NEXT_PUBLIC_R2_PUBLIC_URL=

# === App Config ===
# Set to "true" to require admin approval for new listings
NEXT_PUBLIC_MODERATION_ENABLED=false

# === Firebase Admin SDK (server-side only) ===
# Get from Firebase Console > Project Settings > Service Accounts > Generate New Private Key
FIREBASE_ADMIN_PROJECT_ID=
FIREBASE_ADMIN_CLIENT_EMAIL=
FIREBASE_ADMIN_PRIVATE_KEY=

# === Admin Emails (server-only, NOT exposed to client) ===
# Comma-separated. Users with these emails auto-become admin on login
ADMIN_EMAILS=
